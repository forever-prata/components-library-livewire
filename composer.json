{
    "name": "forever-prata/govbr-components-livewire",
    "description": "Biblioteca de componentes Livewire com suporte a m√∫ltiplos Design Systems (GovBR, Bootstrap e Materialize).",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "GovbrComponentsLivewire\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "GovbrComponentsLivewire\\GovbrComponentsLivewireServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php artisan vendor:publish --provider=\"GovbrComponentsLivewire\\GovbrComponentsLivewireServiceProvider\" --tag=config --force",
            "@php artisan vendor:publish --provider=\"GovbrComponentsLivewire\\GovbrComponentsLivewireServiceProvider\" --tag=views --force",
            "@php artisan vendor:publish --provider=\"GovbrComponentsLivewire\\GovbrComponentsLivewireServiceProvider\" --tag=themes --force"
        ]
    },
    "require": {
        "php": "^8.1",
        "livewire/livewire": "^3.0"
    }
}
